<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".searchGet.SearchGetActivity">

        <TextView
            android:background="@color/mainColor"
            android:text="물품 상세 검색"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="30dp">
        </TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:text="물품명"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/black">
                </TextView>

                <EditText
                    android:textSize="20dp"
                    android:id="@+id/titleArea"
                    android:layout_margin="20dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="습득물명을 입력해주세요"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#000000"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                </LinearLayout>

                <TextView
                    android:text="습득일자"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/black">
                </TextView>

                <Button
                    android:textSize="20dp"
                    android:id="@+id/getStartDate"
                    android:layout_margin="20dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="시작일자를 선택해주세요"/>

                <ImageView
                    android:src="@drawable/arrow"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                </ImageView>

                <Button
                    android:id="@+id/getEndDate"
                    android:textSize="20dp"
                    android:layout_margin="20dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="종료일자를 선택해주세요"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#000000"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                </LinearLayout>

                <TextView
                    android:text="습득위치"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/black">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/getlocationArea"
                            android:layout_margin="20dp"
                            android:background="@android:color/transparent"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:spinnerMode="dropdown"
                            android:hint="습득위치를 선택해주세요"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/question"
                        android:gravity="center_vertical"
                        android:src="@drawable/question"
                        android:layout_width="50dp"
                        android:layout_height="match_parent">
                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#000000"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#000000"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                </LinearLayout>

                <Button
                    android:id="@+id/searchBtn"
                    android:layout_margin="50dp"
                    android:layout_gravity="center"
                    android:text="검색하기"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:background="@drawable/background_radius_yellow"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                </Button>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>